
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GeodataTestAppActivity" >

    <TextView
        android:id="@+id/service_state"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/service_state" />
    
    <TextView
         android:id="@+id/service_response"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_below="@+id/service_state"
         android:text="@string/service_response" />
     
    
    <ListView
        android:id="@+id/testconditions"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/reconnectbutton"
        android:layout_below="@+id/service_response"
        android:layout_weight="1"
        android:divider="#888"
        android:fadeScrollbars="false"
        android:scrollX="0px"
        android:scrollY="0px"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="10dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical" />
 
    <Button
        android:id="@+id/reconnectbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom ="true"
        android:text="Restart Service"  />
</RelativeLayout>