<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

    <LinearLayout
            android:id="@+id/view_finder_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">
        <ImageView
                android:id="@+id/no_camera_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/photo_disabled"/>

        <com.reconinstruments.commonwidgets.SansRegularTextView
                android:id="@+id/view_finder_sleep"
                style="@style/SansRegularTextStyle"
                android:paddingTop="5dp"
                android:text="@string/view_finder_sleep"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <com.reconinstruments.commonwidgets.SansRegularTextView
                    android:id="@+id/press_to_continue"
                    style="@style/SansRegularTextStyle"
                    android:drawableRight="@drawable/select_btn"
                    android:drawablePadding="5dp"
                    android:text="@string/press_capital"/>

            <com.reconinstruments.commonwidgets.SansRegularTextView
                    android:id="@+id/to_take_photo"
                    style="@style/SansRegularTextStyle"
                    android:paddingLeft="5dp"
                    android:text="@string/photo_sleep"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>