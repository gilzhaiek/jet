<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000" >
	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10dp"
		android:gravity="left|center_vertical"
		android:orientation="horizontal" >
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent" >
			<TextView
				android:id="@+id/header_text"
				style="@style/recon_white_text_shadow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_gravity="left|center_vertical"
				android:focusable="false"
				android:text=""
				android:textSize="28px"
				android:textStyle="bold" />
			<ProgressBar
				android:id="@+id/marker_progress"
				style="?android:attr/progressBarStyleSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_gravity="right|center_vertical"
				android:indeterminate="true"
				android:paddingTop="3dip" />
		</RelativeLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/linearLayout1"
		android:layout_marginTop="10dp"
		android:orientation="vertical" >
		<ListView
			android:id="@android:id/list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:focusable="true"
			android:listSelector="@drawable/key_selector"
			android:scrollbars="vertical" />
		<TextView
			android:id="@android:id/empty"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:paddingLeft="20dip"
			android:paddingRight="20dip"
			android:text=""
			android:textSize="22px"
			android:textStyle="normal" />
		<TextView
			android:id="@+id/ok"
			style="@style/recon_focusable_text_shadow"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:background="@drawable/background_transition42"
			android:focusable="true"
			android:gravity="left|center_vertical"
			android:paddingLeft="40dip"
			android:text="TRY AGAIN"
			android:textSize="24dip"
			android:textStyle="bold" />
		<TextView
			android:id="@+id/cancel"
			style="@style/recon_focusable_text_shadow"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:layout_marginBottom="3dip"
			android:background="@drawable/background_transition42"
			android:focusable="true"
			android:gravity="left|center_vertical"
			android:paddingLeft="40dip"
			android:text="CANCEL"
			android:textSize="24dip"
			android:textStyle="bold" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/linearLayout1"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="15dp"
		android:layout_marginRight="20dp"
		android:gravity="left|center_vertical"
		android:orientation="horizontal" >
		<ImageView
			android:id="@+id/back_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginRight="5dp"
			android:src="@drawable/back_button" />
		<TextView
			android:id="@+id/next"
			style="@style/recon_focusable_text_shadow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="20dp"
			android:text="CANCEL"
			android:textSize="20dp"
			android:textStyle="bold" />
		<ImageView
			android:id="@+id/select_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginRight="5dp"
			android:src="@drawable/select_button" />
		<TextView
			android:id="@+id/pair"
			style="@style/recon_focusable_text_shadow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="PAIR"
			android:textSize="20dp"
			android:textStyle="bold" />
	</LinearLayout>
</RelativeLayout>