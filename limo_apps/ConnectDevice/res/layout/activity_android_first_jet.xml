<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.reconinstruments.connectdevice"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000000"
	android:orientation="vertical" >
	<TextView
		style="@style/recon_white_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:focusable="false"
		android:gravity="left|center_vertical"
		android:paddingLeft="20dip"
		android:paddingTop="10dip"
		android:text="SETUP ANDROID PHONE"
		android:textSize="28px"
		android:textStyle="bold" />
	<TextView
		android:id="@+id/activity_android_first_text"
		style="@style/recon_white_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
		android:layout_marginBottom="40dip"
		android:layout_marginTop="10dip"
		android:gravity="left"
		android:paddingLeft="20dip"
		android:paddingRight="20dp"
		android:text="You need Engage app installed on your Android device to get started. Engage app is available on Google Play"
		android:textSize="20dip"
		android:textStyle="normal" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dip"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"
		android:orientation="horizontal" >
		<ImageView
			android:id="@+id/select_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginRight="5dp"
			android:src="@drawable/select_button" />
		<TextView
			android:id="@+id/next"
			style="@style/recon_focusable_text_shadow"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:text="CONTINUE"
			android:textSize="20dip"
			android:textStyle="bold" />
	</LinearLayout>
</LinearLayout>