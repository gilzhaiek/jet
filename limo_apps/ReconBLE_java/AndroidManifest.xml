<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.reconinstruments.nativetest"
android:versionCode="6773"
android:versionName="3.1_aug22" >
	  <!--android:sharedUserId="android.uid.system"-->

    <uses-sdk android:minSdkVersion="10" />

    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS"/>
	
    <application
        android:icon="@drawable/ble"
        android:label="@string/app_name" >
        <activity
            android:name="com.reconinstruments.bletest.BLETestActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
		<category android:name="android.intent.category.DEFAULT"/>
<!--		<category android:name="android.intent.category.LAUNCHER"/>-->
            </intent-filter>
        </activity>

	<activity android:name="com.reconinstruments.bletest.BLEPairingActivity"
        android:theme="@android:style/Theme.NoTitleBar"
        android:screenOrientation="landscape" >
	  <intent-filter>
	    <action android:name="RECON_BLE_PAIRING_ACTIVITY"/>
	    <category android:name="android.intent.category.DEFAULT"/>
	  </intent-filter>
	</activity>

	<activity android:name="com.reconinstruments.bletest.SwitchToMasterMode"
        android:theme="@android:style/Theme.NoTitleBar"
        android:screenOrientation="landscape" >
	  <intent-filter>
	    <action android:name="RECON_BLE_SWITCH_MASTER"/>
	    <category android:name="android.intent.category.DEFAULT"/>
	  </intent-filter>
	</activity>

	<service android:enabled="true" android:exported="true" android:name="com.reconinstruments.bletest.BLETestService">
      <intent-filter> <action android:name="RECON_BLE_TEST_SERVICE"/></intent-filter>
    </service> 

    </application>


</manifest>
