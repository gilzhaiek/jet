<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.reconinstruments.jetunpairdevice"
	android:versionCode="1"
	android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:launchMode="singleInstance"
        android:noHistory="true"
        android:theme="@style/ReconTheme.NoTitleBar.Fullscreen" >
        <activity
            android:name=".PairedDevicesActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.reconinstruments.jetunpairdevice.UNPAIR" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ForgetDeviceActivity" />
	</application>
</manifest>
