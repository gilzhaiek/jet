<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_focused="true" android:state_pressed="false" >
      <shape>
        <solid android:color="@color/transparent" />
        <stroke android:width="2dp" android:color="@color/menu_selector" />
		<corners android:radius="1dp"
		  android:bottomRightRadius="2dp" android:bottomLeftRadius="2dp" 
		  android:topLeftRadius="2dp" android:topRightRadius="2dp"/> 
    </shape>
    
  </item>  
  
  <item android:state_pressed="true" >
    <shape>
        <solid android:color="@color/menu_selector" />
    </shape>
  </item>
  	
</selector>
