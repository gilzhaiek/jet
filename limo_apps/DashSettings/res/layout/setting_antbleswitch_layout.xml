<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/recon_BrightnessBox" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#5791cc" />

    <TextView
        android:id="@+id/pop_up_title"
        android:layout_width="fill_parent"
        android:layout_height="42dip"
        android:background="@color/recon_popup_title_bg"
        android:gravity="center_horizontal|center_vertical"
        android:text="SWITCH SENSOR RADIO"
        android:textColor="#ffffff"
        android:textSize="24px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recon_popup_inner_stroke"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="1dip"
        android:paddingLeft="1dip"
        android:paddingRight="1dip" >

        <com.reconinstruments.dashlauncher.settings.ui.RadioSwitcher
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>