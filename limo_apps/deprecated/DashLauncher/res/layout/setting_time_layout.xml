<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">
    
<LinearLayout style="@style/SetTimePopupBox">
    
       <TextView
            android:id="@+id/setting_title"
            style="@style/white_text_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24px"
			android:textStyle="bold"    
            android:background="@drawable/circular_gradient"
            android:paddingBottom="1dip"
    		android:paddingTop="1dip" 	
             />

     <RelativeLayout
		android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	android:background="@drawable/circular_gradient">
	  	<View
	        android:id="@+id/Divider"
	        android:layout_width="fill_parent"
	        android:layout_height="10dip"
	        android:background="@drawable/tab_bar_gradient"
	        android:layout_alignParentTop="true" />
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:orientation="horizontal"
	        android:layout_alignParentTop="true"  >
	
	        <LinearLayout
	            android:id="@+id/setting_time_hour"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:focusable="true"
	            android:gravity="center_horizontal"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/hour_up"
	                android:layout_width="50px"
	                android:layout_height="30px"
	                android:src="@drawable/setting_icons_uparrow" />
	
	            <TextSwitcher
	                android:id="@+id/hour_switcher"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="10px" />
	
	            <ImageView
	                android:id="@+id/hour_down"
	                android:layout_width="50px"
	                android:layout_height="30px"
	                android:src="@drawable/setting_icons_downarrow" />
	        </LinearLayout>
	
	        <TextView
	            style="@style/white_text_shadow"
	            android:layout_width="30px"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal"
	            android:text=":"
	            android:textSize="24px"
	            android:textStyle="bold" />
	
	        <LinearLayout
	            android:id="@+id/setting_time_min"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:focusable="true"
	            android:gravity="center_horizontal"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/min_up"
	                android:layout_width="50px"
	                android:layout_height="30px"
	                android:src="@drawable/setting_icons_uparrow" />
	
	            <TextSwitcher
	                android:id="@+id/min_switcher"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="10px" />
	
	            <ImageView
	                android:id="@+id/min_down"
	                android:layout_width="50px"
	                android:layout_height="30px"
	                android:src="@drawable/setting_icons_downarrow" />
	        </LinearLayout>
	
	        <LinearLayout
	            android:id="@+id/setting_time_meridiem"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20px"
	            android:focusable="true"
	            android:gravity="center_horizontal"
	            android:orientation="vertical" >
	
	            <ImageView
	                android:id="@+id/meri_up"
	                android:layout_width="50px"
	                android:layout_height="30px"
	                android:src="@drawable/setting_icons_uparrow"
	                 />
	
	            <TextSwitcher
	                android:id="@+id/meri_switcher"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="10px" />
	
	            <ImageView
	                android:id="@+id/meri_down"
	                android:layout_width="50px"
	                android:layout_height="30px"
	                android:src="@drawable/setting_icons_downarrow"
	                 />
	        </LinearLayout>
	    </LinearLayout>
	    </RelativeLayout>
</LinearLayout>
    
</FrameLayout>