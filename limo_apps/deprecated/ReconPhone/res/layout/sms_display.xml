<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="20dp"
	android:paddingLeft="20dp"
	android:paddingRight="20dp"
	android:paddingBottom="10dp" >
	
	<TableLayout 
	    android:id="@+id/header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:shrinkColumns="1">
		<TableRow>
		    <ImageView
			android:id="@+id/dialogImg"
			android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
			android:src="@drawable/sms_icon_blue_crop"
			android:layout_marginRight="5dp" 
			android:gravity="left" />
		<TextView 
		    android:layout_column="1"
			android:id="@+id/dialogTitle"
			android:layout_height = "wrap_content"
			android:layout_width="fill_parent"
			android:layout_marginLeft="10dip"
			android:textSize="25dp"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="@color/tab_selector" />
		<TextView 
			android:id="@+id/dialogDate"
			android:layout_height = "wrap_content"
			android:layout_width="wrap_content"
			android:textSize="25dp"
			android:gravity="right"
			android:layout_weight="1"/>
		</TableRow>
	</TableLayout>
	
	<LinearLayout
		android:id="@+id/testll"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:layout_below="@+id/header"
		android:layout_marginTop="10dip"
		android:paddingBottom="25dp"
		android:orientation="vertical"
		android:weightSum="1.0"
		android:gravity="center_horizontal|center_vertical">
		<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
			android:id="@+id/dialogScrollContainer"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:scrollbarAlwaysDrawVerticalTrack="true"
			android:fadeScrollbars="false"
			android:layout_below="@id/dialogImg"
			android:layout_weight="0.9" >
			<LinearLayout android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:background="#00000000"
			    android:orientation="vertical" >
				<TextView android:id="@+id/dialogTxt"
					android:layout_height = "wrap_content"
					android:layout_width="wrap_content"
					android:textSize="30dp"
					android:textColor="#FFFFFFFF" />
						
				<!-- This view is used to determine the bottom of the view above is visible in the scroll view -->
				<LinearLayout android:id="@+id/scrollViewBottom"
				    android:layout_height="1dp"
				    android:layout_width="fill_parent"
				    android:background="#00000000" />	
			</LinearLayout>	
		</ScrollView>			
	</LinearLayout>
	
	<LinearLayout android:id="@+id/showMore" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:orientation="horizontal"
	    android:gravity="center_vertical" >
		<ImageView
			android:id="@+id/selectIcon"
			android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
			android:src="@drawable/down_icon_red"
			android:layout_marginRight="10dip" />
	    <TextView android:id="@+id/seeMoreTxt" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="See more"
	        android:textSize="24dip" />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/replyDismiss" 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:orientation="horizontal" >
	    <ImageView
			android:id="@+id/selectReplyIcon"
			android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
			android:src="@drawable/select_icon_red"
			android:layout_marginRight="10dip" />
	    <TextView android:id="@+id/replyTxt"  
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Reply"
	        android:textSize="24dip"
	        android:layout_marginRight="30dip" />
	    <ImageView
			android:id="@+id/backIcon"
			android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
			android:src="@drawable/back_icon_red"
			android:layout_marginRight="10dip" />
	    <TextView android:id="@+id/dismissTxt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Dismiss"
	        android:textSize="24dip" />
	</LinearLayout>
</RelativeLayout>



