<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/widget_ply_4x1_new">
	
	<com.reconinstruments.widgets.MarqueeViewSingle 
	    android:id="@+id/song_field"
	    android:visibility="gone"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="60px"
		android:layout_marginRight="10px"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:text="--"
		android:textColor="#FFFFFF"
		android:textSize="29px" />
	
	<TextView android:id="@+id/nothing_text" 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="60px"
		android:layout_marginRight="10px"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:gravity="center_horizontal"
		android:text="--"
		android:textColor="#FFFFFF"
		android:textSize="29px" />
</RelativeLayout>
