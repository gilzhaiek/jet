<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
<shape>
<gradient
android:startColor="#E77A26"
android:endColor="#E77A26"
android:angle="270" />
<stroke
android:width="3dp"
color="#0F58A7" />
</shape>
</item>

<item android:state_focused="true">
<shape>
<gradient
android:endColor="#000000"
android:centerColor="#0F58A7"
android:startColor="#000000"
android:angle="90" />
<stroke
android:width="0dp"
android:color="#FFFFFF" />
</shape>
</item>

<item>
<shape>
<gradient android:endColor="#FFFFFF" android:startColor="#0F58A7"
android:angle="270" />
<stroke
android:width="3dp"
color="#0F58A7" />
</shape>
</item>
</selector>
