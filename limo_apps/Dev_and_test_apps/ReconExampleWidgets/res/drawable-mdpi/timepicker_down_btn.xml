<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Enabled, Not Focused, Not Pressed -->
    <item android:state_pressed="false" 
    	android:state_enabled="true"
        android:state_focused="false">
    	<shape>
    		<solid android:color="#00000000" />
    		<stroke android:width="3dip"
    			android:color="@color/menu_regular"/>
    		<corners android:bottomLeftRadius="5dip"
    			android:bottomRightRadius="5dip"/>
    	</shape>
    </item>
    
    <!-- Enabled, Pressed -->
    <item android:state_pressed="true" 
    	android:state_enabled="true" >
    	<shape>
    		<solid android:color="@color/menu_highlight" />
    		<stroke android:width="3dip"
    			android:color="@color/menu_regular"/>
    		<corners android:bottomLeftRadius="5dip"
    			android:bottomRightRadius="5dip"/>
    	</shape>    
	</item>
    
    <!-- Enabled, Focused, Not Pressed --> 
    <item android:state_pressed="false" 
    	android:state_enabled="true"
        android:state_focused="true" >
    	<shape>
    		<solid android:color="@color/menu_selector" />
    		<stroke android:width="3dip"
    			android:color="@color/menu_regular"/>
    		<corners android:bottomLeftRadius="5dip"
    			android:bottomRightRadius="5dip"/>
    	</shape>    
	</item>
    
    <!-- Disabled, Not Focused, Not Pressed -->
    <item android:state_pressed="false"
    	android:state_enabled="false"
		android:state_focused="false" >
    	<shape>
    		<solid android:color="@color/menu_regular" />
    		<stroke android:width="3dip"
    			android:color="@color/menu_regular"/>
    		<corners android:bottomLeftRadius="5dip"
    			android:bottomRightRadius="5dip"/>
    	</shape>    
	</item>
    
    <!-- Disabled, Focused, Not Pressed -->    
    <item android:state_pressed="false"
    	android:state_enabled="false"
    	android:state_focused="true" >
    	<shape>
    		<solid android:color="@color/menu_regular" />
    		<stroke android:width="3dip"
    			android:color="@color/menu_regular"/>
    		<corners android:bottomLeftRadius="5dip"
    			android:bottomRightRadius="5dip"/>
    	</shape>    
	</item>

</selector>
