<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calibrate_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- android:background="@color/recon_window_bg" -->

    <TextView
        android:id="@+id/calibrate_temperatures"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="right"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/calibrate_ui_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/recon_window_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" >

        <TextView
            android:id="@+id/calibrate_top_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="-20dp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="120sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calibrate_bottom_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </LinearLayout>

</FrameLayout>