<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.reconinstruments.QuickstartGuide"
      android:versionCode="7000"
    android:sharedUserId="android.uid.system"
      android:versionName="4.0_prealpha_10">
      <uses-sdk android:minSdkVersion="10" 
          android:targetSdkVersion="10"/>

    <uses-permission android:name="android.permission.REBOOT" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
      
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity android:name=".Snow2WelcomeActivity"
            	  android:label="@string/app_name"
            	  android:noHistory="true">
            <intent-filter>
                <action android:name="com.reconinstruments.QuickstartGuide.SNOW2_WELCOME"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="JetFadeIn"
                  android:label="@string/app_name"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="com.reconinstruments.QuickstartGuide.QUICKSTART_GUIDE"/>
                <category android:name="android.intent.category.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
             	<action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name="Welcome"
                  android:label="@string/app_name"
                  android:noHistory="true">
        </activity>
        <activity android:name="SwipeBackward"
                  android:label="@string/app_name"
                  android:noHistory="true">
        </activity>
        <activity android:name="SwipeDown"
                  android:label="@string/app_name"
                  android:noHistory="true">
        </activity>
        <activity android:name="SelectButton"
                  android:label="@string/app_name"
                  android:noHistory="true">
        </activity>
        <activity android:name="SwipeForward"
                  android:label="@string/app_name"
                  android:noHistory="true">
        </activity>
        <activity android:name="BackButton"
                  android:label="@string/app_name"
                  android:noHistory="true">
        </activity>
        <activity android:name="Confirmation"
                  android:label="@string/app_name"
                  android:noHistory="true"
                  android:theme="@style/Theme.Transparent">
        </activity>      
        <activity android:name="Outro"
                  android:label="@string/app_name">
        </activity>
         
    </application>
</manifest>
