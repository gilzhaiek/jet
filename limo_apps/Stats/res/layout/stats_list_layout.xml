<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      >

  <com.reconinstruments.reconstats.StatsScrollView 
     android:id="@+id/stats_scrollview"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >
    
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="1"
       android:orientation="vertical"
       >
      
      <include android:id="@+id/row_runs"
               android:layout_width="match_parent"
               android:layout_height="52px"

               layout="@layout/stats_list_item" />
      
      <include android:id="@+id/row_max_speed"
               android:layout_width="match_parent"
               android:layout_height="52px"

               layout="@layout/stats_list_item" />
      
      <include android:id="@+id/row_vertical_drop"
               android:layout_width="match_parent"
               android:layout_height="52px"

               layout="@layout/stats_list_item" />
      
      <include android:id="@+id/row_distance"
               android:layout_width="match_parent"
               android:layout_height="52px"

               layout="@layout/stats_list_item" />
      
      <include android:id="@+id/row_max_altitude"
               android:layout_width="match_parent"
               android:layout_height="52px"

               layout="@layout/stats_list_item" />
      
      <include android:id="@+id/row_best_jump"
               android:layout_width="match_parent"
               android:layout_height="52px"

               layout="@layout/stats_list_item" />
      
    </LinearLayout>

  </com.reconinstruments.reconstats.StatsScrollView>
  
</LinearLayout>
