<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.reconinstruments.polarhr"
      android:versionCode="6773"
      android:versionName="3.1_aug22">
    <uses-sdk android:minSdkVersion="8" />

	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
	<uses-permission android:name="android.permission.BLUETOOTH" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_FRAME_BUFFER" />

    <application android:icon="@drawable/polar_icon" android:label="@string/app_name" 
        android:name=".PolarApplication" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity android:name=".MenuActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".LiveTrackingActivity" 
            android:screenOrientation="landscape" />
        <activity android:name=".StatsReportActivity" 
            android:screenOrientation="landscape" />
        <activity android:name=".DeviceListActivity" 
            android:screenOrientation="landscape" />
        
        <service android:enabled="true" android:exported="true" android:name="com.reconinstruments.polarhr.service.PolarHRService">
			<intent-filter>
				<action android:name="POLAR_HR_SERVICE"/>
			</intent-filter>
		</service> 

    </application>
</manifest>