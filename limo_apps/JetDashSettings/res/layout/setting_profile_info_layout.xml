<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recon_jet_background"
    android:orientation="vertical" >
    <ScrollView
            android:id="@+id/profile_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadingEdgeLength="20dp"
            android:paddingLeft="20dip"
            android:paddingRight="30dip"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none" >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            <include
                    android:id="@+id/setting_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/setting_about_item" />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <include
                        android:id="@+id/setting_profile_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/setting_about_item" />
                <include
                        android:id="@+id/setting_profile_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/setting_about_item" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <include
                        android:id="@+id/setting_profile_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/setting_about_item" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>