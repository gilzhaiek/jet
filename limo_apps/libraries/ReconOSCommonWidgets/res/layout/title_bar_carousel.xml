<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/recon_jet_background" >
	<TextView
		android:id="@+id/title"
		style="@style/recon_jet_text_regular"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:layout_marginTop="20dp"
		android:layout_above="@+id/center_bar"
		android:paddingBottom="10dp"
		android:ellipsize="end"
		android:gravity="center"
		android:lines="1"
		android:maxLines="1"
		android:text=""
		android:textSize="30sp" />
	
	<ImageView
	    android:id="@+id/center_bar"
	    android:layout_height="1dp"
	    android:layout_width="fill_parent"
	    android:layout_centerInParent="true"
	    android:background="#ffffff"/>
	
	<com.reconinstruments.commonwidgets.CarouselPagerContainer
		android:id="@+id/pager_container"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:paddingTop="10dp"
		android:layout_below="@+id/center_bar">
		<android.support.v4.view.ViewPager
			android:id="@+id/view_pager"
			android:layout_width="230dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" />
	</com.reconinstruments.commonwidgets.CarouselPagerContainer>
</RelativeLayout>