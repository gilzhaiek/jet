	<com.reconinstruments.commonwidgets.SansRegularTextView
		android:id="@+id/from"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:ellipsize="end"
		android:singleLine="true"
		android:text="@string/phone_call_from"
		android:textColor="@android:color/white"
		android:textSize="44dp" />
	<RelativeLayout
		android:id="@+id/action_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="20dp"
		android:gravity="left" >
		<TextView
			android:id="@+id/textView1"
			android:drawableLeft="@drawable/back_arrow_jet"
			android:drawablePadding="4dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/textView2"
			android:text="@string/phone_call_dismiss"
			android:textColor="@android:color/white"
			android:textSize="30dp"
			android:visibility="visible" />
		<TextView
			android:id="@+id/textView2"
			android:drawableLeft="@drawable/select_jet"
			android:drawablePadding="2dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="12dp"
			android:text="@string/phone_call_answer"
			android:textColor="@android:color/white"
			android:textSize="30dp"
			android:visibility="visible" />
		<ImageView
			android:id="@+id/image1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dp"
			android:gravity="center"
			android:src="@drawable/back_arrow_jet"
			android:visibility="gone" />
		<TextView
			android:id="@+id/textView3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@+id/image1"
			android:gravity="left|center_vertical"
			android:singleLine="true"
			android:text="@string/phone_call_hang_up"
			android:textColor="@android:color/white"
			android:textSize="32dp"
			android:visibility="gone" />
	</RelativeLayout>
</RelativeLayout>