<?xml version="1.0" encoding="utf-8"?>
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/circular_gradient"
    android:orientation="vertical">
  <RelativeLayout
	     android:layout_width="match_parent"
   		 android:layout_height="match_parent">
     <LinearLayout
           android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:orientation="vertical"
	        android:layout_marginTop="15dp"
	        android:gravity="center_horizontal">
	        <!-- "Pairing with Remote-##### -->

			<TextView 
					android:id="@+id/line1Text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:textSize="24dip"
			        style="@style/white_text_shadow"
			         />

			<!-- "in ## seconds -->
		        
			<TextView 
					android:id="@+id/line2Text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:textStyle="bold"
			        android:textSize="24dip"
			        style="@style/white_text_shadow"/> 
				    
		   	<TextView 
	        android:id="@+id/line3Text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textSize="18dip"
	        style="@style/white_text_shadow" />
		
    </LinearLayout>

     <!--  Divider line -->
      <View
		 android:layout_alignParentBottom="true"   
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginBottom="88dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/horizontal_gradient_fade" />
     <!--  List -->    
     <ListView
     		    android:layout_alignParentBottom="true" 
		        android:id="@android:id/list"
		        android:divider="@drawable/horizontal_gradient_fade"
		        android:layout_width="match_parent"
		        android:layout_height="88dp"
		        android:drawSelectorOnTop="false"
		        android:listSelector="@drawable/key_selector"
		        android:focusable="true"
		        android:fadingEdge="none"
		        android:fadeScrollbars="false"
		        android:scrollbarSize="18dp"
		        android:scrollbarStyle="outsideOverlay"
		        android:scrollbarThumbHorizontal="@drawable/horizontal_gradient"
		        android:scrollbarThumbVertical="@drawable/horizontal_gradient"
		        android:scrollbarTrackHorizontal="@drawable/circular_gradient"
		        android:scrollbarTrackVertical="@drawable/circular_gradient" 
		        />
</RelativeLayout>

	
</LinearLayout>
