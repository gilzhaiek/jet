<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@drawable/round_corners_box"
	android:padding="5px">
	
	<ImageView android:src="@drawable/button_select"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" />
		
	<TextView android:id="@+id/instruct_start_text"
		android:text="Start/Stop" android:textSize="20px" android:textColor="@color/white"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_marginLeft="5px" android:layout_gravity="center_vertical" />
		
	<ImageView android:src="@drawable/button_right"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_marginLeft="15px" android:layout_gravity="center_vertical" />
		
	<TextView android:id="@+id/instruct_lap_text" 
		android:text="Lap/Reset" android:textSize="20px" android:textColor="@color/white" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_marginLeft="5px" android:layout_gravity="center_vertical" />
		
</LinearLayout>
