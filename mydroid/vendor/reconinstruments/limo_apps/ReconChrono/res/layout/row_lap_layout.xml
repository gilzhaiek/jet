<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:paddingLeft="5px" android:paddingRight="5px">

	<TextView android:id="@+id/lap_num" android:textSize="30px" android:layout_width="wrap_content" android:textColor="@drawable/lap_list_selectable_colors" 
		android:layout_height="wrap_content" android:layout_alignParentLeft="True" />

	<TextView android:id="@+id/lap_time" android:textSize="30px" android:layout_width="wrap_content" android:textColor="@drawable/lap_list_selectable_colors" 
		android:layout_height="wrap_content" android:layout_alignParentRight="True" />

</RelativeLayout>