<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000" >
	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10dp"
		android:gravity="left|center_vertical"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/header"
			style="@style/recon_white_text_shadow"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:gravity="left|center_vertical"
			android:text="IPHONE SETUP COMPLETE"
			android:textSize="28px"
			android:textStyle="bold" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/linearLayout1"
		android:layout_below="@+id/linearLayout1"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10dp"
		android:orientation="vertical" >
		<TextView
			android:id="@+id/message_text"
			style="@style/recon_white_text_shadow"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:gravity="left"
			android:text="You are ready to start using your Snow2. \nYou can always adjust your Smartphone setup from the Quick Options menu."
			android:textSize="22px"
			android:textStyle="normal" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/linearLayout2"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="15dp"
		android:layout_marginRight="20dp"
		android:orientation="horizontal" >
		<ImageView
			android:id="@+id/select_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:src="@drawable/select_button" />
		<TextView
			android:id="@+id/next"
			style="@style/recon_focusable_text_shadow"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:text="FINISH"
			android:textSize="20dp"
			android:textStyle="bold" />
	</LinearLayout>
</RelativeLayout>