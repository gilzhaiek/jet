<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000000"
	android:orientation="vertical" >
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="40dp" >
		<TextView
			style="@style/recon_white_text_shadow"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:gravity="left|center_vertical"
			android:paddingLeft="20dip"
			android:paddingTop="10dip"
			android:text="WAITING FOR IPHONE"
			android:textSize="28px"
			android:textStyle="bold" />
		<TextView
			android:id="@+id/timeout"
			style="@style/recon_white_text_shadow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="34dp"
			android:paddingTop="10dip"
			android:text=""
			android:textSize="28px"
			android:textStyle="bold" />
	</RelativeLayout>
	<TextView
		android:id="@+id/activity_ios_waiting_text"
		style="@style/recon_white_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
		android:layout_marginTop="10dp"
		android:gravity="left"
		android:paddingLeft="20dip"
		android:paddingRight="20dip"
		android:text=""
		android:textSize="22px"
		android:textStyle="normal" />
	<TextView
		android:id="@+id/mac_textview"
		style="@style/recon_white_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
		android:gravity="left"
		android:paddingLeft="20dip"
		android:text="Device ID: "
		android:textSize="20dip"
		android:textStyle="normal" />
	<TextView
		android:id="@+id/cancel_textview"
		style="@style/recon_white_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="left"
		android:layout_marginTop="20dp"
		android:gravity="left"
		android:paddingLeft="20dip"
		android:text="Press the power button to cancel"
		android:textSize="20dip"
		android:textStyle="normal" />
</LinearLayout>