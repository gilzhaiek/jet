<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000000"
	android:orientation="vertical" >
	<TextView
		android:id="@+id/title"
		style="@style/recon_white_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:focusable="false"
		android:gravity="left|center_vertical"
		android:paddingLeft="20dip"
		android:paddingTop="10dip"
		android:singleLine="true"
		android:text=""
		android:textSize="28px"
		android:textStyle="bold" />
	<TextView
		android:id="@+id/activity_already_connected_text"
		style="@style/recon_white_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_gravity="left"
		android:layout_marginTop="10dip"
		android:layout_weight="1"
		android:gravity="left"
		android:paddingLeft="20dip"
		android:paddingRight="20dip"
        android:lines="1"
        android:ellipsize="end"
		android:text=""
		android:textSize="22px"
		android:textStyle="normal" />
    <TextView
            android:id="@+id/activity_already_connected_second_text"
            style="@style/recon_white_text_shadow"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text=""
            android:textSize="22px"
            android:textStyle="normal" />
	<TextView
		android:id="@+id/disconnect"
		style="@style/recon_focusable_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:layout_marginLeft="3dip"
		android:layout_marginRight="3dip"
		android:background="@drawable/background_transition42"
		android:focusable="true"
		android:gravity="left|center_vertical"
		android:paddingLeft="40dip"
		android:text="DISCONNECT THIS DEVICE"
		android:textColor="@drawable/selectable_text_highlight_color"
		android:textSize="24dip"
		android:textStyle="bold" />
	<TextView
		android:id="@+id/cancel"
		style="@style/recon_focusable_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:layout_marginBottom="3dip"
		android:layout_marginLeft="3dip"
		android:layout_marginRight="3dip"
		android:background="@drawable/background_transition42"
		android:focusable="true"
		android:gravity="left|center_vertical"
		android:paddingLeft="37dip"
		android:text="CONTINUE USING THIS DEVICE"
		android:textColor="@drawable/selectable_text_highlight_color"
		android:textSize="24dip"
		android:textStyle="bold" />
</LinearLayout>