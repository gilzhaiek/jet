<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/circular_gradient"
	android:orientation="vertical" >
	<TextView
		android:id="@+id/title"
		style="@style/recon_white_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/circular_gradient"
		android:focusable="false"
		android:gravity="center"
		android:paddingBottom="1dip"
		android:paddingTop="1dip"
		android:text=""
		android:textSize="24px"
		android:textStyle="bold" />
	<View
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="@drawable/tab_bar_gradient" />
	<TextView
		android:id="@+id/activity_already_connected_text"
		style="@style/recon_white_text_shadow"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="5dp"
		android:gravity="center"
		android:text=""
		android:textSize="18dip"
		android:textStyle="normal" />
	<View
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="@drawable/tab_bar_gradient" />
	<com.reconinstruments.commonwidgets.CustomTextView
		android:id="@+id/cancel"
		style="@style/recon_focusable_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginBottom="1dp"
		android:background="@drawable/background_transition42"
		android:focusable="true"
		android:gravity="center"
		android:text="Continue Using This Device"
		android:textSize="24dip"
		android:textStyle="bold" />
	<com.reconinstruments.commonwidgets.CustomTextView
		android:id="@+id/disconnect"
		style="@style/recon_focusable_text_shadow"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="1dp"
		android:background="@drawable/background_transition42"
		android:focusable="true"
		android:gravity="center"
		android:text="Unpair This Device"
		android:textSize="24dip"
		android:textStyle="bold" />
</LinearLayout>