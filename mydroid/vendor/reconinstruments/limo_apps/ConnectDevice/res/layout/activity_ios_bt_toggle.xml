<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/circular_gradient" >
	<RelativeLayout
		android:id="@+id/header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/circular_gradient" >
		<TextView
			style="@style/recon_white_text_shadow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="Reset Bluetooth"
			android:textSize="24dip"
			android:textStyle="bold" />
	</RelativeLayout>
	<View
		android:id="@+id/divider"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_below="@id/header"
		android:background="@drawable/tab_bar_gradient" />
	<TextView
		android:id="@+id/message"
		style="@style/recon_white_text_shadow"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_below="@id/divider"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="18dp"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:text=""
		android:textSize="20dip"
		android:textStyle="normal" />
	<RelativeLayout
		android:id="@+id/ok"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/message"
		android:background="@drawable/background_transition42"
		android:focusable="true" >
		<com.reconinstruments.commonwidgets.CustomTextView
			style="@style/recon_focusable_text_shadow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_gravity="center"
			android:duplicateParentState="true"
			android:gravity="center"
			android:text="OK"
			android:textSize="24dip"
			android:textStyle="bold" />
	</RelativeLayout>
</RelativeLayout>