<?xml version="1.0" encoding="utf-8"?>
<com.reconinstruments.camera.ui.ListPrefSettingPopup xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SettingPopupWindow" >

    <LinearLayout
        android:layout_width="@dimen/setting_popup_window_width"
        android:layout_height="wrap_content"
        android:background="@color/popup_background"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/popup_title_frame_min_height" >

            <TextView
                android:id="@+id/title"
                style="@style/PopupTitleText" />
        </FrameLayout>

        <View style="@style/PopupTitleSeparator" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ListView
                android:id="@+id/settingList"
                style="@style/SettingItemList"
                android:choiceMode="singleChoice" />
        </FrameLayout>
    </LinearLayout>

</com.reconinstruments.camera.ui.ListPrefSettingPopup>