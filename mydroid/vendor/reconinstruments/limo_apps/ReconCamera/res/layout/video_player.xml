<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <VideoView
        android:id="@+id/video_player_videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- A simple transparent view that will hold a gradient background .
        	 Everything above this FrameLayout in this XML file will be "underneath"
        	 the gradient -->
    <ImageView
        android:id="@+id/gradient_control_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/video_playback_fade">
    </ImageView>

    <ProgressBar
        android:id="@+id/video_player_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="10dp"
        android:minWidth="240dp"
        android:progress="0"
        android:progressDrawable="@drawable/video_progress" />

<!--    <android.support.v4.view.ViewPager
        android:id="@+id/video_player_pager_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />-->

    <FrameLayout
        android:id="@+id/pager_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" >
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>

</RelativeLayout>
