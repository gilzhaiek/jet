<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/list_item_background_sel" >
	<TextView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/slider_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="10dp"
		android:paddingBottom="5dp"
		android:paddingTop="7dp"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/text_default" />
	<TextView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/slider_value"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/slider_title"
		android:layout_toRightOf="@+id/slider_title"
		android:gravity="center_vertical|left"
		android:paddingLeft="20dp"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/text_default" />
	<SeekBar
		android:id="@+id/slider_seekbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_below="@+id/slider_title"
		android:paddingBottom="5dp" />
</RelativeLayout>