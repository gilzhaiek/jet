<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<ImageView
		android:id="@+id/camera_live_video"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scaleType="fitXY" />
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/live_preview_disabled_layout"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:background="@drawable/shape_label_bg"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="20dp" >
		<ImageView
			android:id="@+id/live_preview_disabled_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:gravity="center"
			android:scaleType="fitXY"
			android:src="@drawable/ic_camera" />
		<TextView
			android:id="@+id/live_preview_disabled_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:gravity="center"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_default" />
	</LinearLayout>
	<TextView
		android:id="@+id/recording_time_label"
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:layout_alignRight="@+id/record_button_frame"
		android:layout_alignTop="@+id/record_button_frame"
		android:background="@drawable/record_button_elongated"
		android:gravity="center_vertical|left"
		android:includeFontPadding="false"
		android:paddingBottom="20dp"
		android:paddingLeft="20dp"
		android:paddingTop="20dp"
		android:shadowColor="#000"
		android:shadowDx="1.0"
		android:shadowDy="1.0"
		android:shadowRadius="1.0"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/text_default"
		android:visibility="invisible" />
	<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/record_button_frame"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="30dp"
		android:layout_marginRight="30dp" >
		<com.contour.connect.views.RecordButton
			android:id="@+id/record_button"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center"
			android:background="@drawable/record_button_background_shape"
			android:padding="4dp"
			android:scaleType="fitCenter"
			android:src="@drawable/btn_record_state_list" 
			android:focusable="true"
			android:onClick="onClickedRecord"/>
	</FrameLayout>
</RelativeLayout>