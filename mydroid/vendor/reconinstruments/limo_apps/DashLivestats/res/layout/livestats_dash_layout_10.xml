<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recon_jet_background"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp" >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="10dp" >
        <com.reconinstruments.dashlauncher.livestats.widgets.ReconWidgetHolder
            android:id="@+id/recon_dash_widget_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="3dp" />
        <com.reconinstruments.dashlauncher.livestats.widgets.ReconWidgetHolder
            android:id="@+id/recon_dash_widget_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="3dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp" >
        <com.reconinstruments.dashlauncher.livestats.widgets.ReconWidgetHolder
            android:id="@+id/recon_dash_widget_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="3dp" />
        <com.reconinstruments.dashlauncher.livestats.widgets.ReconWidgetHolder
            android:id="@+id/recon_dash_widget_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="3dp" />
    </LinearLayout>
</LinearLayout>