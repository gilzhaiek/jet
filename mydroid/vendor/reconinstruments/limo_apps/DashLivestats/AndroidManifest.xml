<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reconinstruments.dashlivestats"
    android:sharedUserId="android.uid.system"
    android:versionCode="6900"
    android:versionName="3.2" >
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />
    <uses-permission android:name="android.permission.SET_TIME" />
    <uses-permission android:name="android.permission.SET_TIME_ZONE" />
    <application
        android:name=".DashLauncherApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".SnowLiveStatsActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".JetLiveStatsActivity"
            android:label="@string/app_name"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DaySummaryActivity"
            android:label="day_summary"
            android:launchMode="singleInstance"
            android:theme="@style/ReconTheme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".PostActivityMapOverlayActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/ReconTheme.NoTitleBar.Fullscreen" >
        </activity>
    </application>
</manifest>