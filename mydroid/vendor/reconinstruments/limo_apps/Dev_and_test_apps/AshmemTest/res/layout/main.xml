<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp">

<!--
    <Button
        android:id="@+id/one_kb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1KB Load"
        android:onClick="oneKB" />
-->
    <Button
        android:id="@+id/one_mb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1MB Load"
        android:onClick="oneMB" />

    <Button
        android:id="@+id/ten_mb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/one_mb"
        android:text="10MB Load"
        android:onClick="tenMB" />

    <Button
        android:id="@+id/twn_mb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/ten_mb"
        android:text="20MB Load"
        android:onClick="twnMB" />

    <Button
        android:id="@+id/for_ten"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/twn_mb"
        android:text="For 10MB"
        android:onClick="forTenMB" />

    </RelativeLayout>
</LinearLayout>

