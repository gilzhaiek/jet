<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:id="@+id/last_jump_layout" android:paddingLeft="15px">

	<TextView android:id="@+id/tab_title" android:text="--"
		android:textColor="@color/max_speed_green" style="@style/detailText"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<!-- Max Speed -->
	<TextView android:id="@+id/max_speed" android:text="Max"
		style="@style/detailText" android:layout_below="@+id/tab_title" />

	<TextView android:id="@+id/max_speed_field" android:text="--"
		android:textColor="@color/max_speed_green" style="@style/detailText"
		android:layout_toLeftOf="@+id/max_speed_field_unit"
		android:layout_marginRight="10px" android:layout_alignBaseline="@+id/max_speed" />

	<TextView android:id="@+id/max_speed_field_unit"
		android:text="m" style="@style/detailText"
		android:layout_alignParentRight="True" android:layout_alignBaseline="@+id/max_speed" />

	
	<!-- Avg Speed -->
	<TextView android:id="@+id/avg_speed" android:text="Average"
		style="@style/detailText" android:layout_below="@+id/max_speed" />

	<TextView android:id="@+id/avg_speed_field" android:text="--"
		android:textColor="@color/max_speed_green" style="@style/detailText"
		android:layout_toLeftOf="@+id/avg_speed_field_unit"
		android:layout_marginRight="10px" android:layout_alignBaseline="@+id/avg_speed" />

	<TextView android:id="@+id/avg_speed_field_unit"
		android:text="m" style="@style/detailText"
		android:layout_alignParentRight="True" android:layout_alignBaseline="@+id/avg_speed" />
	
	
	<!-- All Time Max Speed -->
	<TextView android:id="@+id/all_time_max_speed" android:text="All Time Max"
		style="@style/detailText" android:layout_below="@+id/avg_speed" />

	<TextView android:id="@+id/all_time_max_speed_field" android:text="--"
		android:textColor="@color/max_speed_green" style="@style/detailText"
		android:layout_toLeftOf="@+id/all_time_max_speed_field_unit"
		android:layout_marginRight="10px" android:layout_alignBaseline="@+id/all_time_max_speed" />

	<TextView android:id="@+id/all_time_max_speed_field_unit"
		android:text="m" style="@style/detailText"
		android:layout_alignParentRight="True" android:layout_alignBaseline="@+id/all_time_max_speed" />
	
</RelativeLayout>