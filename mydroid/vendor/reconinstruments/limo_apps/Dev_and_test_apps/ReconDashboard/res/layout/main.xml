<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
   >
   <TableRow 
   android:layout_marginLeft="12dp">
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal">
     <TextView  android:id="@+id/big_black" android:textSize="70sp" android:gravity="center" 
     android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"
     />
     <TextView  android:id="@+id/alt_field" android:textSize="25sp" android:gravity="center" 
     android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"
     
     android:textColor="#000000"
     android:text="-- m"
     android:paddingTop="30dp"
     android:layout_marginLeft="8dp"/><!-- android:background="@drawable/alt_dashboard" -->
     </LinearLayout>
    </TableRow>
    <TableRow android:layout_marginLeft="12dp">
     <LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
       android:orientation="vertical"
       ><!-- android:background="@drawable/gps_dashboard" -->
    <TextView android:id="@+id/gps_latt" android:textSize="20sp" 
     android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"
     android:textColor="#000000"
     android:text="lat"
     android:layout_marginTop="10dp"
     android:paddingLeft="70dp"/>
     
     <TextView android:id="@+id/gps_long" android:textSize="20sp" 
     android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"
     android:textColor="#000000"	
     android:text="long"
     android:layout_marginTop="10dp"
     android:paddingLeft="70dp"/>
     </LinearLayout>
     </TableRow>
 </TableLayout>
     