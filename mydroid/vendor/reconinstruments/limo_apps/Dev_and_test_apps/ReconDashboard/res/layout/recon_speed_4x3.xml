<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent">
	
	<ImageView android:id="@+id/gauge" android:src="@drawable/speed_gauge_0_med"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:layout_alignParentLeft="True" android:layout_alignParentTop="True" />
		
	<TextView android:id="@+id/unit" android:text="km/h"
		android:layout_alignParentTop="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:textColor="#FFFFFF" android:textSize="35px"
		android:layout_marginRight="20px" />
		
	<TextView android:id="@+id/speed" style="@style/speed4x3" />
	
</RelativeLayout>