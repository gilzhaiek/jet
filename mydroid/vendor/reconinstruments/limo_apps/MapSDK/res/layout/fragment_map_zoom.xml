<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textview"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
    	android:textColor="#f5f5f5"
    	android:textSize="30sp"
    	android:gravity="center"
    	android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="textview" />
	
    <ProgressBar
        android:id="@+id/loadmap_progressbar"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="#6c6c6c"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_below="@id/textview" />
    
    <ProgressBar
        android:id="@+id/loadmap_timeoutbar"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#6c6c6c"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_below="@id/loadmap_progressbar" />
    
    <ProgressBar
        android:id="@+id/activemap_progressbar"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true" />
     
    
	<ImageView
        android:id="@+id/zoom_pan_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/zoom_btn"
        android:layout_marginTop="5dp"
        android:contentDescription="zoom"
        android:visibility="gone" />

     <ImageView
        android:id="@+id/debug_service_connected"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/led_green"
        android:contentDescription="connection_btn"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/debug_gps_blinker"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/led_blue"
        android:contentDescription="gps_blink"
        android:visibility="gone" />

</RelativeLayout>