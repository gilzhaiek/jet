<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textview"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
    	android:textColor="#f5f5f5"
    	android:textSize="30sp"
    	android:gravity="center"
    	android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="textview" />
	
    <ProgressBar
        android:id="@+id/loadmap_progressbar"
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_marginTop="11dp"
        android:background="#6c6c6c"
        style="@style/MapProgressBar"
        android:layout_below="@id/textview" />
    
    <ProgressBar
        android:id="@+id/loadmap_timeoutbar"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#6c6c6c"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_below="@id/loadmap_progressbar"
        android:visibility="invisible"/>
    	
    <ProgressBar
        android:id="@+id/activemap_progressbar"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>
    
    
	<ImageView
        android:id="@+id/zoom_pan_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/zoom_btn"
        android:layout_marginTop="5dp"
        android:contentDescription="zoom"
        android:visibility="gone" />

     <ImageView
        android:id="@+id/debug_service_connected"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/led_green"
        android:contentDescription="connection_btn"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/debug_gps_blinker"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/led_blue"
        android:contentDescription="gps_blink"
        android:visibility="gone" />
    
        <ImageView
            android:id="@+id/fadeBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="fadeBackground"
            android:src="@drawable/fadebackground"
            android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/buddy_distance_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/fadebackground_top_bottom"
            android:scaleType="fitXY"/>

        <!--textview shadows don't seem to work if defined in a style,
        so explicitly defining them here-->
        <com.reconinstruments.mapsdk.mapview.SansRegularTextView
            android:id="@+id/buddy_distance"
            style="@style/MapTextStyle"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true"
            android:shadowColor="#000"
            android:shadowDy="2.0"
            android:shadowRadius="2.0"
            android:textSize="22dp"/>

    </RelativeLayout>

         <com.reconinstruments.mapsdk.mapview.SansRegularTextView
         android:id="@+id/zoomBtn"
         style="@style/MapTextStyle"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="158dp"
         android:contentDescription="zoom_button"
         android:drawableLeft="@drawable/select_btn"
         android:drawablePadding="4dp"
         android:shadowColor="#000"
         android:shadowDy="2.0"
         android:shadowRadius="2.0"
         android:text="@string/zoom_button"
         android:textSize="30dp"
         android:visibility="gone" />

        <com.reconinstruments.mapsdk.mapview.SansRegularTextView
            android:id="@+id/findBtn"
            style="@style/MapTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="158dp"
            android:contentDescription="find_button"
            android:drawableLeft="@drawable/chevron_arrow"
            android:drawablePadding="6dp"
            android:shadowColor="#000"
            android:shadowDy="2.0"
            android:shadowRadius="2.0"
            android:text="@string/find_friend_button"
            android:textSize="30dp"
            android:visibility="gone" />


              

</RelativeLayout>