<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.reconinstruments.jetmusic"
	android:versionCode="1"
	android:versionName="1.0" >
	<uses-sdk
		android:minSdkVersion="10"
		android:targetSdkVersion="17" />
	<application
		android:allowBackup="true"
		android:icon="@drawable/music_icon"
		android:label="@string/app_name"
		android:launchMode="singleInstance"
		android:theme="@style/ReconTheme.NoTitleBar" >
		<activity
			android:name=".MainActivity"
			android:launchMode="singleInstance" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<action android:name="com.reconinstruments.jetmusic" />
				<category android:name="android.intent.category.LAUNCHER" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
			android:name=".MusicPlayer"
			android:launchMode="singleInstance"
			android:theme="@style/ReconTheme.NoTitleBar.Fullscreen" >
		</activity>
		<activity
			android:name=".JetMusicPlayer"
			android:launchMode="singleInstance"
			android:theme="@style/ReconTheme.NoTitleBar.Fullscreen" >
		</activity>
		<service
			android:name="com.reconinstruments.jetmusic.service.MusicService"
			android:enabled="true"
			android:exported="true" >
			<intent-filter>
				<action android:name="RECON_MUSIC_SERVICE" />
			</intent-filter>
		</service>
		<receiver
			android:name="com.reconinstruments.jetmusic.service.MusicBroadcastReceiver"
			android:enabled="true"
			android:exported="true" >
			<intent-filter>
				<action android:name="HUD_STATE_CHANGED" />
				<action android:name="RECON_MUSIC_MESSAGE" />
			</intent-filter>
		</receiver>
		<uses-library android:name="com.stonestreetone.bluetopiapm" />
	</application>
</manifest>
