<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recon_jet_background" >

    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="27.5dp"
        android:gravity="center"
        android:padding="0dp"
        android:src="@drawable/info_icon" />

    <LinearLayout
        android:id="@+id/first_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/body"
            style="@style/recon_jet_text_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:drawableRight="@drawable/left_arrow"
            android:drawablePadding="5dp"
            android:text="@string/snow_press_left"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/body2"
            style="@style/recon_jet_text_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/right_arrow"
            android:text="@string/snow_or_right"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/body3"
            style="@style/recon_jet_text_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/snow_on_your_remote"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/body4"
        style="@style/recon_jet_text_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_block"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/snow_navigate_snow2_menus"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body4"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/body5"
            style="@style/recon_jet_text_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/select_snow2"
            android:lineSpacingExtra="-6dp"
            android:text="@string/snow_press_button"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/body6"
            style="@style/recon_jet_text_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-6dp"
            android:paddingLeft="5dp"
            android:text="@string/snow_to_interact"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>