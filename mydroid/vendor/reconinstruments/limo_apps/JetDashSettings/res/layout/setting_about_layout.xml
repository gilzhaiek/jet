<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/recon_jet_background"
	android:orientation="vertical" >
	<ScrollView
		android:id="@+id/setting_desc"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fadingEdgeLength="20dp"
		android:paddingLeft="20dip"
		android:paddingRight="30dip"
		android:requiresFadingEdge="vertical"
		android:scrollbars="none" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
			<include
				android:id="@+id/setting_about_version"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/setting_about_item" />
			<include
				android:id="@+id/setting_about_serial"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/setting_about_item" />
			<include
				android:id="@+id/setting_about_model"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/setting_about_item" />
			<include
				android:id="@+id/setting_about_android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/setting_about_item" />
			<include
				android:id="@+id/setting_about_build"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/setting_about_item" />
			<include
				android:id="@+id/setting_about_kernel"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/setting_about_item" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>