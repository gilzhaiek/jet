<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#AA000000"
	>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="30dip"
		android:layout_marginRight="30dip"
		android:layout_centerInParent="true"
		android:background="@drawable/dialog_shape">
		
	    <LinearLayout
			android:id="@+id/titleContainer"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="left"
			orientation="horizontal"
			android:background="@drawable/dialog_top_shape"
			android:paddingLeft="5dip" >
			<ImageView
				android:id="@+id/dialogImg"
				android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
				android:src="@drawable/sms_icon_black"
				android:layout_gravity="center_vertical"
				android:layout_marginRight="5dp"
				android:paddingTop="5dip"
				android:paddingBottom="5dip"
				android:paddingLeft="15dip"
				android:paddingRight="10dip" />
			<TextView android:id="@+id/callFromText"
				android:layout_width="wrap_content"
				android:layout_height = "wrap_content"
				android:textColor="#FF000000"
				android:layout_gravity="center_vertical"
				android:textSize="24dp"/>
		</LinearLayout>
		
	    <ScrollView android:id="@+id/dialogScrollContainer"
			android:layout_width="fill_parent"
			android:layout_height="95dp"
			android:scrollbarAlwaysDrawVerticalTrack="true"
			android:fadeScrollbars="false"
			android:layout_below="@+id/titleContainer"
			android:layout_weight="0.9"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dip"
			android:paddingLeft="10dip"
			android:paddingRight="10dip" >
			<LinearLayout android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:background="#00000000"
			    android:orientation="vertical" >
				<TextView android:id="@+id/dialogTxt"
					android:layout_height = "wrap_content"
					android:layout_width="wrap_content"
					android:textSize="24dp"
					android:textColor="#FFFFFFFF" />
					<!-- This view is used to determine the bottom of the view above is visible in the scroll view -->
				<LinearLayout android:id="@+id/scrollViewBottom"
				    android:layout_height="1dp"
				    android:layout_width="fill_parent"
				    android:background="#00000000" />	
			</LinearLayout>	
		</ScrollView>
	        
	    <LinearLayout 
			android:orientation="horizontal" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:gravity="center_vertical"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="10dip" >
			<ImageView
				android:id="@+id/selectIcon"
				android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
				android:src="@drawable/select_icon_red"
				android:layout_marginRight="10dip" />
			<TextView
			    android:id="@+id/answerTxt"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/recon_grey"
			    android:text="Reply"
			    android:textSize="24dp"
			    android:layout_marginRight="40dip" />
			<ImageView
				android:id="@+id/backIcon"
				android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
				android:src="@drawable/back_icon_red"
				android:layout_marginRight="10dip" />
			<TextView
			    android:id="@+id/dismissTxt"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/recon_grey"
			    android:text="Dismiss"
			    android:textSize="24dp" />
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>