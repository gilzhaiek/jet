<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.reconinstruments.phone"
      android:versionCode="6607"
      android:versionName="1.3.11">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar" >
        <activity android:name=".ReconPhone"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity android:name=".DisplaySMSActivity"
             android:screenOrientation="landscape" />
         <activity android:name=".SMSReplyActivity"
             android:screenOrientation="landscape" />
         <activity android:name=".IncomingDialogActivity"
             android:theme="@style/Theme.Transparent"
             android:screenOrientation="landscape">
			<intent-filter>
            	<action android:name="RECON_INCOMING_SMS_CALL"/>
         		<category android:name="android.intent.category.DEFAULT" />                
            </intent-filter>
            
         </activity>

    </application>
</manifest>