<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!-- Left -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/speed_value"
                style="@style/white_text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="115sp"
                android:includeFontPadding="false"
                android:paddingRight="18dip"
                android:singleLine="true"
                android:text="@string/invalid_value"
                android:textSize="115sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="35dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="14dip" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="@drawable/horizontal_gradient" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="6dip"
                        android:gravity="center_vertical"
                        android:minHeight="35dip"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/white_text_shadow"
                            android:layout_width="wrap_content"
                            android:layout_height="35dip"
                            android:gravity="right"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.85"
                            android:lines="2"
                            android:text="@string/max_speed"
                            android:textColor="#CCCCCC"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="2dip"
                            android:layout_height="40dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:background="@drawable/vertical_gradient"
                             />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/max_speed_value"
                                style="@style/white_text_shadow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.85"
                                android:singleLine="true"
                                android:text="@string/invalid_value"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/speed_unit"
                                style="@style/white_text_shadow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.85"
                                android:singleLine="true"
                                android:text="@string/kmh"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="9dip"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/livestats_bar_speed" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right side -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="14dip" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/alt_value"
                        style="@style/white_text_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="73sp"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/invalid_value"
                        android:textSize="62sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/alt_unit"
                        style="@style/white_text_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/alt_value"
                        android:layout_toRightOf="@+id/alt_value"
                        android:text="m"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@drawable/horizontal_gradient"
                    android:layout_marginRight="35dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center_vertical"
                    android:minHeight="35dip"
                    android:layout_marginRight="35dip" >

                    <TextView
                        android:id="@+id/alt_text"
                        style="@style/white_text_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/alt_img"
                        android:includeFontPadding="false"
                        android:text="@string/altitude"
                        android:textColor="#CCCCCC"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="9dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/livestats_bar_alt"
                android:layout_marginRight="35dip" />
        </LinearLayout>
    </LinearLayout>

    <!-- Vertical Seperator -->

    <View
        android:layout_width="2dip"
        android:layout_height="187dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dip"
        android:background="@drawable/vertical_gradient" />

</FrameLayout>