<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/circular_gradient"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.reconinstruments.dashlauncher">

    <LinearLayout
        android:id="@+id/apps"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:focusable="true"
        android:layout_gravity="center" android:gravity="center"
        android:background="@drawable/background_transition112"
        android:layout_marginTop="21dip" >

        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/apps_icon"
            android:layout_marginRight="10dp"
            />
         <com.reconinstruments.widgets.CustomTextView
            android:id="@+id/album_name"
       		style="@style/focusable_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apps"
            android:textSize="50dip"
            android:textStyle="bold"
            android:duplicateParentState="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/background_transition62"
        android:layout_gravity="center" android:gravity="center"
        android:focusable="true"
        android:padding="10dip" >
		<ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_selectable"
            android:layout_marginRight="10dp"
            android:duplicateParentState="true" />
		
         <com.reconinstruments.widgets.CustomTextView
            android:id="@+id/album_name"
       		style="@style/focusable_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="22dip"
            android:textStyle="bold"
            android:duplicateParentState="true" />
            
    </LinearLayout>

</LinearLayout>