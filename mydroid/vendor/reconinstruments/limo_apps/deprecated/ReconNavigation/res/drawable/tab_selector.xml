  <item android:state_focused="true" android:state_pressed="false" >
      <shape>
        <solid android:color="@color/tab_selector" />
        <stroke android:width="3dp" android:color="@color/tab_selector" />
		<corners android:radius="1dp"
		  android:bottomRightRadius="2dp" android:bottomLeftRadius="2dp" 
		  android:topLeftRadius="2dp" android:topRightRadius="2dp"/> 
    </shape>
  </item>  
  
  <item android:state_pressed="true" >
        <shape>
        <solid android:color="@color/tab_selector" />
    </shape>
  </item>  
  	
  
  <!--  this really makes no effect at all -->
  <item android:state_selected="true" android:state_focused="false">
      <shape>
        <solid android:color="#ff00ff00" />
    </shape>
  </item>  
  
  <!--  this really makes no effect at all -->
   <item android:state_selected="false" android:state_focused="false" android:state_pressed="false" >
      <shape>
        <solid android:color="#aa0000ff" />
    </shape>
  </item>  
  

