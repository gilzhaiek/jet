<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dip">
    	<LinearLayout
			android:id="@+id/numberPickerUp"
			android:layout_width="65dip"
			android:layout_height="30dip"
			android:background="@drawable/timepicker_up_btn"				
			android:focusable="true" 
			android:gravity="center_horizontal|center_vertical">
			<TextView android:id="@+id/upIconText" 
				android:text="+"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textColor="#FFFFFFFF"
				android:textSize="20sp"/>	
		</LinearLayout>
		
		<EditText
			android:id="@+id/pickerInput"
			android:layout_width="65dip"
			android:layout_height="28dip"
			android:gravity="center_horizontal|center_vertical"
			android:editable="false"
			android:singleLine="true"
			android:focusable="false"
			style="?android:attr/textAppearanceLargeInverse"
			android:focusableInTouchMode="false"
			android:layout_below="@id/numberPickerUp"
			android:textSize="24sp"
			android:textColor="#FFFFFFFF"
			android:background="@drawable/timepicker_input" />
			
		<LinearLayout
			android:id="@+id/numberPickerDown"
			android:layout_width="65dip"
			android:layout_height="30dip"
			android:background="@drawable/timepicker_down_btn"
			android:layout_below="@id/pickerInput"					
			android:focusable="true"
			android:gravity="center_horizontal|center_vertical">
			<TextView android:id="@+id/downIconText" 
				android:text="&#8211;"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textColor="#FFFFFFFF"
				android:textSize="20sp"/>
		</LinearLayout>
</RelativeLayout>